<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cadastrar_produto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.gustavo.firebaseapp.activity.CadastrarProdutoActivity">

    <TextView
        android:id="@+id/tx1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Cadastrar novo produto:"/>

    <EditText
        android:id="@+id/cpProdDescricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Descrição"
        android:theme="@style/textoCixa"
        android:layout_below="@+id/tx1"/>

    <EditText
        android:id="@+id/cpProdCor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cor"
        android:theme="@style/textoCixa"
        android:layout_below="@+id/cpProdDescricao"/>

    <EditText
        android:id="@+id/cpProdFabricante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fabricante"
        android:theme="@style/textoCixa"
        android:layout_below="@+id/cpProdCor"/>

    <Button
        android:id="@+id/btnCadProd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:layout_below="@+id/cpProdFabricante"
        android:theme="@style/botaoPadrao"/>

</RelativeLayout>
