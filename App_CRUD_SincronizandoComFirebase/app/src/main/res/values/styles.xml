<resources>

    <!-- Base application theme.
        opcao NoActionBar faz a toolbar natura sumir
        opcao DarkActionBar faz aparecer
    -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:itemBackground">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>
    
    <style name="botaoPadrao" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorPrimarer</item>
        <item name="colorControlHighlight">@android:color/holo_blue_dark</item>
    </style>

    <style name="textoCixa" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:editTextColor">@android:color/black</item>
        <item name="colorAccent">@android:color/holo_blue_dark</item>
    </style>

</resources>
